<%- include('header'); -%>

<body class="dashboard">

    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div> 
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        <div class="header dashboard">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <nav class="navbar navbar-expand-lg navbar-light px-0">
                            <a class="navbar-brand" href="dashboard"><img src="/images/w_logo.png" alt=""></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="dashboard">Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="buy-sell">Rút tiền/Chuyển tiền</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="accounts">Tài khoản</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="settings">Cài đặt</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="dashboard_log my-2">
                                <div class="d-flex align-items-center">
                                    <div class="account_money">
                                        <ul>
                                            <li class="crypto">
                                                <span>VNĐ</span>
                                            </li>
                                            <li class="usd">
                                                <span>USD</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="profile_log dropdown">
                                        <div class="user" data-toggle="dropdown">
                                            <span class="thumb"><i class="la la-user"></i></span>
                                            <span class="name"><%= currentUser.displayName %></span>
                                            <span class="arrow"><i class="la la-angle-down"></i></span>
                                        </div>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="accounts" class="dropdown-item">
                                                <i class="la la-user"></i> Tài khoản
                                            </a>
                                            <a href="history" class="dropdown-item">
                                                <i class="la la-book"></i> Lịch sử
                                            </a>
                                            <a href="settings" class="dropdown-item">
                                                <i class="la la-cog"></i> Cài đặt
                                            </a>
                                            <a href="logout" class="dropdown-item logout">
                                                <i class="la la-sign-out"></i> Logout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="page_title section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="page_title-content">
                            <p>Xin chào trở lại,
                                <span><%= currentUser.displayName %></span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header border-0">
                        <h4 class="card-title">Tất cả tài khoản</h4>
                    </div>
                    <div class="card-body pt-0">
                        <div class="transaction-table">
                            <div class="table-responsive">
                                <table class="table mb-0 table-responsive-sm">
                                    <tbody>
                                        <tr>
                                            <td>Tên</td>
                                            <td>Email</td>
                                            <td>SĐT</td>
                                            <td>Số tiền</td>
                                            <td>Số tài khoản</td>
                                            <td>Trạng thái</td>
                                        </tr>
                                        <% listUser.forEach(u =>{  if(u.permission == "0"){%>
                                            <tr>
                                                <td><%= u.displayName %></td>
                                                <td><%= u.email %></td>
                                                <td><%= u.phone %></td>
                                                <td><%= u.totalMoney %></td>
                                                <td><%= u.idcard %></td>

                                                <td>
                                                    <select class="form-control" name="method">
                                                        <option value="0" <% if(u.activate =='0'){ %>
                                                            selected="selected"
                                                          <% } %> >Chưa kích hoạt</option>
                                                        <option value="1" <% if(u.activate =='1'){ %>
                                                            selected="selected"
                                                          <% } %>>Đã kích hoạt</option>
                                                    </select>
                                                </td>
                                                <td><button type="submit" name="submit" class="btn btn-success btn-block">Lưu</button></td>
                                            </tr>
                                       <% }}); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
    </div>

<%- include('footer'); -%>