<%- include('header'); %>

<body class="dashboard">

    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        <div class="header dashboard">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <nav class="navbar navbar-expand-lg navbar-light px-0">
                            <a class="navbar-brand" href="dashboard"><img src="/images/w_logo.png" alt=""></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="saving">Gửi tiết kiệm</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Tài khoản</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">Cài đặt</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="dashboard_log my-2">
                                <div class="d-flex align-items-center">
                                    <div class="account_money">
                                        <ul>
                                            <li class="crypto">
                                                <span><%= user.totalMoney %></span>
                                                <span>VNĐ</span>
                                            </li>
                                            <li class="usd">
                                                <span><%= Math.round(currentUser.totalMoney/23000 * 100) / 100 %> USD</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="profile_log dropdown">
                                        <div class="user" data-toggle="dropdown">
                                            <span class="thumb"><i class="la la-user"></i></span>
                                            <span class="name"><%= user.displayName %></span>
                                            <span class="arrow"><i class="la la-angle-down"></i></span>
                                        </div>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="accounts" class="dropdown-item">
                                                <i class="la la-user"></i> Tài khoản
                                            </a>
                                            <a href="history" class="dropdown-item">
                                                <i class="la la-book"></i> Lịch sử
                                            </a>
                                            <a href="settings" class="dropdown-item">
                                                <i class="la la-cog"></i> Cài đặt
                                            </a>
                                            <a href="logout" class="dropdown-item logout">
                                                <i class="la la-sign-out"></i> Logout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="page_title section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <div class="page_title-content">
                            <p>Xin chào trở lại,
                                <span><%= user.displayName %> </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="settings mb-80">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-md-4">
                        <div class="card settings_menu">
                            <div class="card-header">
                                <h4 class="card-title">Cài đặt</h4>
                            </div>
                            <div class="card-body">
                                <ul>
                                    <li class="nav-item">
                                        <a href="settings" class="nav-link active">
                                            <i class="la la-user"></i>
                                            <span>Chỉnh sửa tài khoản</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="settings-security" class="nav-link">
                                            <i class="la la-lock"></i>
                                            <span>Bảo mật</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-md-8">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Thông tin người dùng</h4>
                                    </div>
                                    <div class="card-body">
                                        <form method="POST">
                                            <div class="form">
                                                <div class="form-group">
                                                    <label class="mr-sm-2">Tên</label>
                                                    <input type="text" class="form-control"
                                                        value="<%= user.displayName %>" disabled>
                                                </div>
                                                <div class="form-group">
                                                    <label class="mr-sm-2">Số tài khoản</label>
                                                    <input type="text" class="form-control" value="<%= user.idcard %>"
                                                        disabled>
                                                </div>
                                                <div class="form-group">
                                                    <label class="mr-sm-2">Số tiền: <%= user.totalMoney %></label>
                                                    <input type="number" class="form-control"
                                                       name="totalMoney" placeholder="500000">
                                                </div>
                                                    <div class="row justify-content-between px-5">
                                                        <div class="col-">
                                                            <button class="btn btn-success waves-effect">Lưu</button>
                                                        </div>
                                                        <div class="col-">
                                                            <a href="/accounts-admin/uploadCMND" class="btn btn-success waves-effect">Tải
                                                                ảnh lên</a>
                                                        </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Thông tin tài khoản</h4>
                                    </div>
                                    <div class="card-body">
                                        <form method="POST" action="/settings/password">
                                            <div class="form-row">
                                                <div class="form-group col-xl-12">
                                                    <label class="mr-sm-2">Mail</label>
                                                    <input type="email" class="form-control" value="<%= user.email %>"
                                                        disabled>
                                                </div>
                                                <div class="form-group col-xl-12">
                                                    <label class="mr-sm-2">Mật khẩu mới</label>
                                                    <input type="password" class="form-control" placeholder="**********"
                                                        name="newPassword">
                                                    <label class="mr-sm-2">Nhập lại mật khẩu</label>
                                                    <input type="password" class="form-control" placeholder="**********"
                                                        name="confirmPassword">
                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn-success waves-effect">Lưu</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Thông tin chi tiết</h4>
                                    </div>
                                    <div class="card-body">
                                        <form method="POST" action="/settings/changeInfo">
                                            <div class="form-row">
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Họ tên</label>
                                                    <input type="text" class="form-control"
                                                        value="<%= user.displayName %>" disabled>
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Email</label>
                                                    <input type="email" class="form-control"
                                                        placeholder="Hello@example.com" value="<%= user.email %>"
                                                        disabled>
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">CMND</label>
                                                    <input type="text" class="form-control"
                                                        value="<%= user.identityCard %>" disabled autocomplete="off">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Ngày sinh</label>
                                                    <input type="text" class="form-control" value="<%= user.dob %>"
                                                        autocomplete="off" name="dob">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Địa chỉ</label>
                                                    <input type="text" class="form-control" value="<%= user.address %>"
                                                        name="address">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Xã/Phường</label>
                                                    <input type="text" class="form-control" value="<%= user.wards %>"
                                                        name="wards">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Quận/Huyện</label>
                                                    <input type="text" class="form-control" value="<%= user.district %>"
                                                        name="district">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Thành phố/Tỉnh</label>
                                                    <input type="text" class="form-control" value="<%= user.city %>"
                                                        name="city">
                                                </div>

                                                <div class="form-group col-12">
                                                    <button class="btn btn-success pl-5 pr-5">Lưu</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="footer">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-6 col-md-6">
                        <div class="copy_right">
                            Copyright © 2019 Quixlab. All Rights Reserved.
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6 text-lg-right text-center">
                        <div class="social">
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer'); -%>