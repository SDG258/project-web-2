<%- include('header'); %>

<body class="dashboard">

    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        <div class="header dashboard">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <nav class="navbar navbar-expand-lg navbar-light px-0">
                            <a class="navbar-brand" href="dashboard"><img src="/images/w_logo.png" alt=""></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="dashboard">Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="buy-sell">Rút/Chuyển tiền</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="accounts">Tài khoản</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" href="settings">Cài đặt</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="dashboard_log my-2">
                                <div class="d-flex align-items-center">
                                    <div class="account_money">
                                        <ul>
                                            <li class="crypto">
                                                <span>0.0025</span>
                                                <i class="cc BTC-alt"></i>
                                            </li>
                                            <li class="usd">
                                                <span>19.93 USD</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="profile_log dropdown">
                                        <div class="user" data-toggle="dropdown">
                                            <span class="thumb"><i class="la la-user"></i></span>
                                            <span class="name">Maria Pascle</span>
                                            <span class="arrow"><i class="la la-angle-down"></i></span>
                                        </div>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="accountss" class="dropdown-item">
                                                <i class="la la-user"></i> Tài khoản
                                            </a>
                                            <a href="history" class="dropdown-item">
                                                <i class="la la-book"></i> Lịch sử
                                            </a>
                                            <a href="settings" class="dropdown-item">
                                                <i class="la la-cog"></i> Cài đặt
                                            </a>
                                            <a href="logout" class="dropdown-item logout">
                                                <i class="la la-sign-out"></i> Logout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="page_title section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <div class="page_title-content">
                            <p>Xin chào trở lại,
                                <span><%= currentUser.displayName %> </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="settings mb-80">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-md-4">
                        <div class="card settings_menu">
                            <div class="card-header">
                                <h4 class="card-title">Cài đặt</h4>
                            </div>
                            <div class="card-body">
                                <ul>
                                    <li class="nav-item">
                                        <a href="settings" class="nav-link active">
                                            <i class="la la-user"></i>
                                            <span>Chỉnh sửa tài khoản</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="settings-security" class="nav-link">
                                            <i class="la la-lock"></i>
                                            <span>Bảo mật</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-9 col-md-8">
                        <div class="row">
                            <div class="col-xl-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Thông tin người dùng</h4>
                                    </div>
                                    <div class="card-body">
                                        <form method="POST">
                                            <div class="form-row">
                                                <div class="form-group col-xl-12">
                                                    <label class="mr-sm-2">Tên</label>
                                                    <input type="text" class="form-control" value="<%= currentUser.displayName %>" disabled>
                                                </div>
                                                <div class="form-group col-xl-12">
                                                    <label class="mr-sm-2">Số tài khoản</label>
                                                    <input type="text" class="form-control" value="<%= currentUser.idcard %>" disabled>
                                                </div>
                                                <div class="form-group col-xl-12">
                                                    <div class="media align-items-center mb-3">
                                                        <img class="mr-3 rounded-circle mr-0 mr-sm-3"
                                                            src="/images/profile/2.png" width="55" height="55">
                                                        <div class="media-body">
                                                            <h4 class="mb-0"><%= currentUser.displayName %></h4>
                                                            <p class="mb-0">
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="file-upload-wrapper" data-text="Thay đổi ảnh">
                                                        <input name="file-upload-field" type="file"
                                                            class="file-upload-field">
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn-success waves-effect">Lưu</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Thông tin tài khoản</h4>
                                    </div>
                                    <div class="card-body">
                                        <form action="#">
                                            <div class="form-row">
                                                <div class="form-group col-xl-12">
                                                    <label class="mr-sm-2">Mail</label>
                                                    <input type="email" class="form-control" value="<%= currentUser.email %>" disabled>
                                                </div>
                                                <div class="form-group col-xl-12">
                                                    <label class="mr-sm-2">Mật khẩu mới</label>
                                                    <input type="password" class="form-control"
                                                        placeholder="**********">
                                                    <label class="mr-sm-2">Nhập lại mật khẩu</label>
                                                    <input type="password" class="form-control"
                                                        placeholder="**********">
                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn-success waves-effect">Lưu</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h4 class="card-title">Thông tin chi tiết</h4>
                                    </div>
                                    <div class="card-body">
                                        <form method="post" name="myform" class="personal_validate">
                                            <div class="form-row">
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Họ tên</label>
                                                    <input type="text" class="form-control" value="<%= currentUser.displayName %>" disabled>
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Email</label>
                                                    <input type="email" class="form-control"
                                                        placeholder="Hello@example.com" value="<%= currentUser.email %>" disabled>
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">CMND</label>
                                                    <input type="text" class="form-control" value="<%= currentUser.identityCard %>" disabled
                                                        autocomplete="off">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Ngày sinh</label>
                                                    <input type="text" class="form-control" placeholder="28-02-1999"
                                                        autocomplete="off">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Địa chỉ</label>
                                                    <input type="text" class="form-control"
                                                        placeholder="118A/4 Lý Thường Kiệt">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">phường</label>
                                                    <input type="text" class="form-control"
                                                        placeholder="phường 7">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Quận</label>
                                                    <input type="text" class="form-control" placeholder="Quận 10">
                                                </div>
                                                <div class="form-group col-xl-6">
                                                    <label class="mr-sm-2">Thành phố</label>
                                                    <input type="text" class="form-control" placeholder="Quận 10">
                                                </div>

                                                <div class="form-group col-12">
                                                    <button class="btn btn-success pl-5 pr-5">Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="footer">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-6 col-md-6">
                        <div class="copy_right">
                            Copyright © 2019 Quixlab. All Rights Reserved.
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6 text-lg-right text-center">
                        <div class="social">
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('footer'); -%>s
