<%- include('header'); -%>

<body class="dashboard">

    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>

    <div id="main-wrapper">

        <div class="header dashboard">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <nav class="navbar navbar-expand-lg navbar-light px-0">
                            <a class="navbar-brand" href="dashboard"><img src="/images/w_logo.png" alt=""></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="saving">Gửi tiết kiệm</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="accounts">Tài khoản</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="settings">Cài đặt</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="dashboard_log my-2">
                                <div class="d-flex align-items-center">
                                    <div class="account_money">
                                        <ul>
                                            <li class="crypto">
                                                <span><%= currentUser.totalMoney %></span>
                                                <span>VNĐ</span>
                                            </li>
                                            <li class="usd">
                                                <span><%= Math.round(currentUser.totalMoney/23000 * 100) / 100 %> USD</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="profile_log dropdown">
                                        <div class="user" data-toggle="dropdown">
                                            <span class="thumb"><i class="la la-user"></i></span>
                                            <span class="name"><%= currentUser.displayName %></span>
                                            <span class="arrow"><i class="la la-angle-down"></i></span>
                                        </div>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a href="accounts" class="dropdown-item">
                                                <i class="la la-user"></i> Tài khoản
                                            </a>
                                            <a href="history" class="dropdown-item">
                                                <i class="la la-book"></i> Lịch sử
                                            </a>
                                            <a href="settings" class="dropdown-item">
                                                <i class="la la-cog"></i> Cài đặt
                                            </a>
                                            <a href="logout" class="dropdown-item logout">
                                                <i class="la la-sign-out"></i> Logout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="page_title section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="page_title-content">
                            <p>Xin chào trở lại,
                                <span><%= currentUser.displayName %></span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="accounts mb-80">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="card profile_card">
                            <div class="card-body">
                                <div class="media">
                                    <img class="mr-3 rounded-circle mr-0 mr-sm-3" src="/images/profile/2.png" width="60"
                                        height="60">
                                    <div class="media-body">
                                        <span>Xin chào</span>
                                        <h4 class="mb-2"><%= currentUser.displayName %></h4>
                                        <p class="mb-1"> <span><i class="fa fa-phone mr-2 text-primary"></i></span><%= currentUser.phone %></p>
                                        <p class="mb-1"> <span><i class="fa fa-envelope mr-2 text-primary"></i></span>
                                            <%= currentUser.email %>
                                        </p>
                                    </div>
                                </div>

                                <ul class="card-profile__info">
                                    <li>
                                        <h5 class="text-dark mr-4">Địa chỉ:</h5>
                                        <span class="text-muted"><%= currentUser.address %>, <%= currentUser.wards %>, <%= currentUser.district %>,  <%= currentUser.city %> </span>
                                    </li>
                                    <li class="mb-1">
                                        <h5 class="text-dark mr-4">Tổng số giao dịch:</h5>
                                        <span><%= deal.length %> </span>
                                    </li>
                                    <li>
                                        <h5 class="text-danger mr-4">Giao dịch gần nhất</h5>
                                        <span class="text-danger"><% deal.length > 0 ? deal[0].createdAt : '' %></span>
                                    </li>
                                </ul>
                                <div class="social-icons">
                                    <a class="facebook text-center" href="javascript:void(0)"><span><i
                                                class="fa fa-facebook"></i></span></a>
                                    <a class="twitter text-center" href="javascript:void(0)"><span><i
                                                class="fa fa-twitter"></i></span></a>
                                    <a class="youtube text-center" href="javascript:void(0)"><span><i
                                                class="fa fa-youtube"></i></span></a>
                                    <a class="googlePlus text-center" href="javascript:void(0)"><span><i
                                                class="fa fa-google"></i></span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="card acc_balance">
                            <div class="card-header">
                                <h4 class="card-title">Thông tin</h4>
                            </div>
                            <div class="card-body">
                                <span>Số tiền</span>
                                <h3><%= currentUser.totalMoney %> VNĐ</h3>

                                <div class="d-flex justify-content-between my-4">
                                    <div>
                                        <p class="mb-1">Số tài khoản</p>
                                        <h4><%= currentUser.idcard %> </h4>
                                    </div>
                                    <div>
                                        <p class="mb-1">CMND</p>
                                        <h4><%= currentUser.identityCard %> </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Gửi tiết kiệm</h4>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="/saving">
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text"><i class="fa fa-money"></i></label>
                                            </div>
                                            <input type="text" class="form-control" placeholder="50 000" name="amounOfMoney">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <label class="input-group-text"><i class="fa fa-bank"></i></label>
                                            </div>
                                            <select class="form-control" name="select">
                                                <option value="3.701">1 tháng</option>
                                                <option value="3.702">2 tháng</option>
                                                <option value="3.9503">3 tháng</option>
                                                <option value="6.3206">6 tháng</option>
                                                <option value="6.307">7 tháng</option>
                                                <option value="6.308">8 tháng</option>
                                                <option value="6.3509">9 tháng</option>
                                                <option value="6.410">10 tháng</option>
                                                <option value="6.411">11 tháng</option>
                                                <option value="7.4212">12 tháng</option>
                                                <option value="7.4615">15 tháng</option>
                                                <option value="7.0518">18 tháng</option>
                                                <option value="7.0524">24 tháng</option>
                                                <option value="7.0536">36 tháng</option>
                                            </select>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary btn-block">Gửi tiết kiệm</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card">
                            <div class="card-header border-0">
                                <h4 class="card-title">Lịch sử gửi tiền</h4>
                            </div>
                            <div class="card-body pt-0">
                                <div class="transaction-table">
                                    <div class="table-responsive">
                                        <table class="table mb-0 table-responsive-sm">
                                            <tbody>
                                                <form method="POST" action="/saving/withdrawal/<%= saving.transactionNumber %>">
                                                    <% saving.length > 0 ? saving.forEach(u => {  if(u.status == 0) { %>
                                                        <tr>
                                                            <td id="<%= u.transactionNumber %>"><%= u.amounOfMoney %></td>
                                                            <td><%= u.duration %>tháng</td>
                                                            <td><%= u.createdAt %>%</td>
                                                            <td><%= u.interestRate %>%</td>
                                                            <td><a href="/saving/withdrawal/<%= u.transactionNumber %>" class="btn btn-primary btn-block" style="color: white;">Rút</a></td>
                                                        </tr>
                                                    <% }}) : '' %>
                                                </form>
                                              
                                                <% saving.length > 0 ? saving.forEach(u => {  if(u.status == 1) { %>
                                                    <tr>
                                                        <td><%= u.amounOfMoney %></td>
                                                        <td><%= u.duration %>tháng</td>
                                                        <td><%= u.createdAt %>%</td>
                                                        <td><%= u.interestRate %>%</td>
                                                        <td>Đã rút</td>
                                                    </tr>
                                                <% }}) : '' %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="footer">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-6 col-md-6">
                        <div class="copy_right">
                            Copyright © 2019 Quixlab. All Rights Reserved.
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6 text-lg-right text-center">
                        <div class="social">
                            <a href="#"><i class="fa fa-youtube-play"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('footer'); -%>